{% extends 'PrincipalBundle:Plantillas:PlantillaAdmin.html.twig' %}

{% block title %}
Cuerpo
{% endblock %}

{% block body %}

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center><h3 class="titulo1">Editar Cuerpos de Ejercito  &nbsp;
          <span class="glyphicon glyphicon-pencil"
        aria-hidden="true"></span></h3></center>
      </div>
        <div class="panel-body">
          {{ form_start(Cuerpos) }}
          <div class="form-group">
            {{ form_label(Cuerpos.denominacion) }}
            {{ form_widget(Cuerpos.denominacion) }}
            <span class="text_danger">{{ form_errors(Cuerpos.denominacion) }}</span>
          </div>
         
          
          <div class="form-group">
            {{ form_widget(Cuerpos.Guardar) }}
          </div>
          {{ form_end(Cuerpos) }}
        </div>
    </div>
  </div>
</div>

  
{% endblock %}
