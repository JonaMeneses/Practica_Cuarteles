{% extends 'PrincipalBundle:Plantillas:PlantillaAdmin.html.twig' %}

{% block title %}
Cuerpo
{% endblock %}

{% block body %}

<div class="container">
  <div class="panel panel-default">
      <div class="panel-heading">

  <h2><span class="glyphicon glyphicon-list-alt"></span> &nbsp; Registro de Servicios</h2>
  <hr>
  <a href="{{ path('addServicio') }}" class="btn btn-success">Nuevo Servicio</a>
  <hr>
</div>
  <table class="table table-bordered">
    <thead>
      <th>Id</th>
      <th>Descripcion</th>
      <th>Opciones</th>
    </thead>
    <tbody>
      {% for a in Servicios %}
        <tr>
          <td>{{a.id}}</td>
          <td>{{a.descripcion}}</td>
          <td><a href="{{path('delete_Servicio',{id:a.id})}}" class="btn btn-sucess">
              <span class="glyphicon glyphicon-trash"></span>
            </a>
            <a href="{{path('edit_Servicio',{id:a.id})}}" class="btn btn-info">
              <span class="glyphicon glyphicon-edit"></span>
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  </div>
</div>
  
{% endblock %}
{% block pie %}

{% endblock %}


