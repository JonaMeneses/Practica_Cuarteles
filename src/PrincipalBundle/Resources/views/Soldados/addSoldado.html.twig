{% extends 'PrincipalBundle:Plantillas:PlantillaAdmin.html.twig' %}

{% block title %}
Cuerpo
{% endblock %}

{% block body %}

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center><h3 class="titulo1">Registro de Soldados  &nbsp;
          <span class="glyphicon glyphicon-pencil"
        aria-hidden="true"></span></h3></center>
      </div>
        <div class="panel-body">
          {{ form_start(form) }}
          <div class="form-group">
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre) }}
            <span class="text_danger">{{ form_errors(form.nombre) }}</span>
          </div>
          <div class="form-group">
            {{ form_label(form.paterno) }}
            {{ form_widget(form.paterno) }}
            <span class="text_danger">{{ form_errors(form.paterno) }}</span>
          </div>
          <div class="form-group">
            {{ form_label(form.materno) }}
            {{ form_widget(form.materno) }}
            <span class="text_danger">{{ form_errors(form.materno) }}</span>
          </div>
          <div class="form-group">
            {{ form_label(form.graduacion) }}
            {{ form_widget(form.graduacion) }}
            <span class="text_danger">{{ form_errors(form.graduacion) }}</span>
          </div>
          <div class="form-group">
            {{ form_label(form.fkcodigocuerpo) }}
            {{ form_widget(form.fkcodigocuerpo) }}
            <span class="text_danger">{{ form_errors(form.fkcodigocuerpo) }}</span>
          </div>
          <div class="form-group">
            {{ form_label(form.fknumcompania) }}
            {{ form_widget(form.fknumcompania) }}
            <span class="text_danger">{{ form_errors(form.fknumcompania) }}</span>
          </div>
          <div class="form-group">
            {{ form_label(form.fkcodigocuartel) }}
            {{ form_widget(form.fkcodigocuartel) }}
            <span class="text_danger">{{ form_errors(form.fkcodigocuartel) }}</span>
          </div>
         
          
          <div class="form-group">
            {{ form_widget(form.Guardar) }}
          </div>
          {{ form_end(form) }}
        </div>
    </div>
  </div>
</div>

  
{% endblock %}
