{% extends 'PrincipalBundle:Plantillas:Plantilla.html.twig' %}

{% block body %}
<img src="{{asset('Public/img/fondo_login.jpg')}}" class="img-fondo-inicio">
       
<div class="container ">
	<div class="col-md-6 col-md-offset-3 ">
		<div class="panel panel-default">
			<div class="panel-heading">
				<center><h3 class="titulo1">Registrate  &nbsp;  <span class="glyphicon glyphicon-pencil"
				aria-hidden="true"></span></h3></center>
			</div>
				<div class="panel-body">
					{{ form_start(form) }}
					<div class="form-group">
						{{ form_label(form.nombre) }}
						{{ form_widget(form.nombre) }}
						<span class="text_danger">{{ form_errors(form.nombre) }}</span>
					</div>
					<div class="form-group">
						{{ form_label(form.email) }}
						{{ form_widget(form.email) }}
						<span class="text_danger">{{ form_errors(form.email) }}</span>
					</div>
					<div class="form-group">
						{{ form_label(form.password) }}
						{{ form_widget(form.password) }}
						<span class="text_danger">{{ form_errors(form.password) }}</span>
					</div>
					<div class="form-group">
						{{ form_widget(form.Registrar) }}
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		
	</div>
</div>

{% endblock %}
{% block pie %}
{% endblock %}
