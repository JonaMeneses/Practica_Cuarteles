{% extends 'PrincipalBundle:Plantillas:Plantilla.html.twig' %}

{% block title %}
Login
{% endblock %}

{% block body %}

    <img src="{{asset('Public/img/fondo_login.jpg')}}" class="img-fondo-inicio">
    <div class="container ">
  <div class="col-md-6 col-md-offset-3 ">
   <div class="panel panel-default">
       
<div class="panel-heading">
        <center><h3 class="titulo1">Iniciar Sesion  &nbsp;  <span class="glyphicon glyphicon-user"
        aria-hidden="true"> </span></h3></center>
      </div>
      <div class="panel-body">
          <form action="{{path('login_check')}}" method="post" >
          <div class="form-group">
          <label>Email Usuario:</label><br>
          <input type="email" id="username" name="_username" value="" class="form-control" required style="color:black" placeholder="Escribe tu email">
          </div>
          <div class="form-group">
          <label>Contraseña:</label><br>
          <input type="password" id="password" name="_password" class="form-control" required style="color:black" placeholder="Escribe tu contraseña">
          </div>
          
          <div class="form-group">
         <input type="submit" value="Entrar" class="btn btn-success"/>
          <input type="hidden" name="_target_path" value="/index">
         <input  class="btn btn-primary"  type="button" onclick="history.back()" value="Regresar">
          </div>
          </form>
          </div>
        </div>
</div>
        </div>

  
{% endblock %}
